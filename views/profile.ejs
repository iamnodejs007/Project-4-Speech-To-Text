<script src="/js/moment.js" type="text/javascript"></script>
<br><br> <br>
<div class="container headline">
  <div class="row">
    <div class="col s4 offset-s3">
        <h3>Profile Information</h3><br>
        <h5>Name: <%= user.local.name %></h5><br>
        <h5>Email: <%= user.local.email %></h5><br>
        <h5 id="user-since"></h5>
    </div>
  </div>
    <br>
  <div class="row">
    <div class="col s2 offset-s2">
      <a class="waves-effect waves-light btn-large green" href="/user/<%= user._id %>">Edit</a>
    </div>
    <div class="col s2">
      <a class="waves-effect waves-light btn-large blue" href="/logout">Logout</a>
    </div>
    <div class="col s2">
      <a class="waves-effect waves-light btn-large gray" href="/main">Home Page</a>
    </div>
    <div class="col s2">
      <a class="waves-effect waves-light btn-large red" id="delete-account" href="/user/<%= user._id %>/delete">Delete Account</a>
    </div>
  </div>
</div>





<!-- div used to store user data to then be taken by jQuery and put back into the DOM -->
<div id="user-creation" data-userCreation="<%= user.createdAt %>"></div>



<script type="text/javascript">

  var userDate = $('#user-creation').data('userCreation')
  $('#user-since').append('<h5>User since: ' + moment(userDate).format('LL') + '</h5>')
  // $('#user-creation').on('click', function(){
  //     console.log($(this).data('userCreation'));
  //     userDate = $('#user-creation').data('userCreation')
  // })


  $('#delete-account').on('click', function(e){
    if (! confirm("Are you sure you want to permanently delete your account?!")) {
      e.preventDefault()
    }
  })

</script>

</div>
